    <title>–ó–∞–≥—Ä—É–∑—á–∏–∫ –ú—É–∑—ã–∫–∏ —Å YouTube</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        /* –ò–º–ø–æ—Ä—Ç —à—Ä–∏—Ñ—Ç–∞ Inter. –û–±—ã—á–Ω–æ —Ä–µ–∫–æ–º–µ–Ω–¥—É–µ—Ç—Å—è –¥–µ–ª–∞—Ç—å —ç—Ç–æ —á–µ—Ä–µ–∑ <link> –≤ <head>, 
           –Ω–æ @import –≤ <style> —Ç–∞–∫–∂–µ —è–≤–ª—è–µ—Ç—Å—è –≤–∞–ª–∏–¥–Ω—ã–º —Å–ø–æ—Å–æ–±–æ–º. */
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
        
        /* –°—Ç–∏–ª–∏ –¥–ª—è –∞–Ω–∏–º–∞—Ü–∏–∏ –∑–∞–≥—Ä—É–∑—á–∏–∫–∞ */
        .loader {
            border-top-color: #3498db; /* –¶–≤–µ—Ç –≤–µ—Ä—Ö–Ω–µ–π –≥—Ä–∞–Ω–∏—Ü—ã –¥–ª—è –∞–Ω–∏–º–∞—Ü–∏–∏ –≤—Ä–∞—â–µ–Ω–∏—è */
            animation: spin 1s linear infinite; /* –ê–Ω–∏–º–∞—Ü–∏—è –≤—Ä–∞—â–µ–Ω–∏—è */
        }
        @keyframes spin {
            to { transform: rotate(360deg); } /* –ö–æ–Ω–µ—á–Ω–æ–µ —Å–æ—Å—Ç–æ—è–Ω–∏–µ –∞–Ω–∏–º–∞—Ü–∏–∏ –≤—Ä–∞—â–µ–Ω–∏—è */
        }
